<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="ScrollImageStyle" format="reference"/>

    <declare-styleable name="ScrollImageView">
        <attr name="indicatorColor" format="color"/>
        <attr name="indicatorSelectedColor" format="color"/>
        <attr name="indicatorUnselectedColor" format="color"/>
        <attr name="indicatorType">
            <enum name="circle" value="1"/>
            <enum name="line" value="2" />
        </attr>
        <attr name="indicatorHeight" format="dimension"/>
        <attr name="indicatorWidth" format="dimension"/>
        <attr name="indicatorPosition">
            <enum name="left" value="1" />
            <enum name="center" value="2"/>
            <enum name="right" value="3"/>
        </attr>
        <attr name="indicatorBackground" format="color|reference"/>
    </declare-styleable>

</resources>
